@using Store.WebApp.MVC.Extensions.Interfaces
@inject IUser AppUser 

<ul class="navbar-nav">
    @if (AppUser.IsAuthenticate())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá @AppUser.GetEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right: 30px;">
            <a class="btn btn-success" asp-controller="Auth" asp-action="CreateUser">Crie sua Conta</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    }
</ul>
